worker_processes 1;
working_directory /app;
daemon off;

events {
  worker_connections 80;
}

http {
  include /etc/nginx/mime.types;

  server {
    listen $PORT;
    server_name mybranch.dev;
    root /app/site;

    location / {
      try_files $uri $uri.html $uri/ /404.html;
    }
  }
  
  server {
      listen $PORT;
      server_name blog.mybranch.dev;
      return 301 https://mybranch.dev$request_uri;
  }
}
